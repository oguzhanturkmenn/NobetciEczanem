<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>
        <variable
            name="model"
            type="com.oguzhanturkmen.mypharmacyonduty.models.PharmacyModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:orientation="vertical"
        tools:context=".fragments.PharmacyDetailsFragment">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mt25"
            android:orientation="vertical"
            android:paddingStart="15dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlSymmetry">


            <TextView
                android:id="@+id/eczDetailName"
                android:layout_width="331dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jockey_one"
                tools:text="@string/eczane_detailismi"
                android:text="@{model.eczaneAdi}"
                android:textColor="@color/red"
                android:textSize="@dimen/text_big"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="256dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/eczAdresName"
                android:layout_width="331dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:drawablePadding="10dp"
                android:fontFamily="@font/jockey_one"
                tools:text="@string/eczane_adresi"
                android:text="@{model.adresi}"
                android:textColor="@color/white"
                android:textSize="@dimen/text_small"
                app:drawableLeftCompat="@drawable/ic_location"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="317dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/eczTelNo"
                android:layout_width="331dp"
                android:layout_height="0dp"
                android:layout_marginTop="35dp"
                android:layout_weight="10"
                android:drawablePadding="10dp"
                android:fontFamily="@font/jockey_one"
                tools:text="@string/eczane_telefon_numarasi"
                android:text="@{model.telefon}"
                android:textColor="@color/white"
                android:textSize="@dimen/text_small"
                app:drawableLeftCompat="@drawable/ic_phone"
                tools:layout_editor_absoluteX="47dp"
                tools:layout_editor_absoluteY="372dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />

        </LinearLayout>

        <ImageView
            android:id="@+id/phoneImage"
            android:layout_width="110dp"
            android:layout_height="101dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="460dp"
            android:layout_marginBottom="4dp"
            android:contentDescription="@string/arayiniz"
            android:src="@drawable/phoneimg"
            app:layout_constraintBottom_toTopOf="@+id/callText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/goToMapsImage"
            android:layout_width="110dp"
            android:layout_height="101dp"
            android:layout_marginTop="460dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/gotomaps"
            app:layout_constraintBottom_toTopOf="@+id/directionText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/yol_tarifi" />

        <TextView
            android:id="@+id/callText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="57dp"
            android:fontFamily="@font/bevan"
            android:text="@string/arayiniz"
            android:textColor="@color/white"
            android:textSize="@dimen/text_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phoneImage" />

        <TextView
            android:id="@+id/directionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="57dp"
            android:fontFamily="@font/bevan"
            android:text="@string/yol_tarifi"
            android:textColor="@color/white"
            android:textSize="@dimen/text_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/goToMapsImage" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>